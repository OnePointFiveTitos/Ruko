<UserControl x:Class="Ruko.CustomerViewMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Ruko">
    <Menu>
        <MenuItem
            Command="{Binding ModifyCommand}"
            Header="{Binding ModificationButtonTest, FallbackValue='_Modify', TargetNullValue='_Modify'}"/>
        <MenuItem
            Command="{Binding CancelCommand}"
            Header="_Cancel"/>
        <MenuItem
            Command="{Binding CloseCommand}"
            Header="C_lose"/>
        <MenuItem
            Command="{Binding Parent.CloseAllCommand}"
            Header="Close _All"/>
    </Menu>
</UserControl>
