<UserControl x:Class="Ruko.ReadContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:car="clr-namespace:ControlsAndResources;assembly=ControlsAndResources"
             xmlns:local="clr-namespace:Ruko">
    <StackPanel>
        <car:LabeledTextblock
            Input="{Binding Name.Full}"
            Label="Name: "/>
        <car:LabeledTextblock
            Input="{Binding Address.Full}"
            Label="Address: "/>
        <car:LabeledTextblock
            Visibility="{Binding IsSameBillAndMailTo, Converter={StaticResource FalseToVisibility}}"
            Input="{Binding AdditionalAddress.Full}"
            Label="Address 2: "/>
        <car:LabeledTextblock
            Input="{Binding Phone.Full}"
            Label="Phone: "/>
        <car:LabeledTextblock
            Input="{Binding Email.Full}"
            Label="Email: "/>
    </StackPanel>
</UserControl>
