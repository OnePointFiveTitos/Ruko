<UserControl x:Class="Ruko.WriteNameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:car="clr-namespace:ControlsAndResources;assembly=ControlsAndResources"
             xmlns:local="clr-namespace:Ruko">
    <StackPanel>

        <car:LabeledTextbox
            Label="First"
            Input="{Binding First}"/>

        <car:LabeledTextbox
            Label="Middle"
            Input="{Binding Middle}"/>

        <car:LabeledTextbox
            Label="Last"
            Input="{Binding Last}"/>

    </StackPanel>
</UserControl>