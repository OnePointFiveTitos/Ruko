<Window x:Class="Ruko.RukoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ruko"
        WindowState="Maximized"
        FontSize="{Binding SelectedFontSize}"
        TextBlock.FontSize="{Binding SelectedFontSize}"
        TextElement.FontSize="{Binding SelectedFontSize}">
    <Window.Resources>
        <Style TargetType="Menu">
            <Setter Property="TextBlock.FontSize" Value="{Binding SelectedFontSize}"/>
            <Setter Property="TextElement.FontSize" Value="{Binding SelectedFontSize}"/>
            <Setter Property="FontSize" Value="{Binding SelectedFontSize}"/>
        </Style>
    </Window.Resources>
    <local:RukoView
        x:Name="RukoView"/>
</Window>
