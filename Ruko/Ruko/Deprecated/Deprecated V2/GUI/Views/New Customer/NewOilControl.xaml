<UserControl x:Class="Ruko.NewOilControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ruko"
             xmlns:car="clr-namespace:ControlsAndResources;assembly=ControlsAndResources"
             DataContext="{Binding Oil}">
    <StackPanel>
        <car:LabeledTextbox
            Input="{Binding Tank}"
            Label="Tank: "/>
        <car:LabeledTextbox
            Input="{Binding FillLocation}"
            Label="Fill Location: "/>
        <car:LabeledTextbox
            Input="{Binding DeliveryInstructions}"
            Label="Instructions: "/>
    </StackPanel>
</UserControl>
