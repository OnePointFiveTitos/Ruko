<UserControl x:Class="Ruko.NewAccountControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ruko"
             xmlns:car="clr-namespace:ControlsAndResources;assembly=ControlsAndResources"
             DataContext="{Binding Account}">
    <StackPanel>
        <car:LabeledTextbox
            Input="{Binding Status}"
            Label="Status: "/>
        <car:LabeledTextbox
            Input="{Binding Standing}"
            Label="Standing: "/>
        <car:LabeledTextbox
            Input="{Binding Lead}"
            Label="Lead: "/>
    </StackPanel>
</UserControl>
