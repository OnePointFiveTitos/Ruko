<UserControl x:Class="Ruko.NewContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ruko"
             xmlns:car="clr-namespace:ControlsAndResources;assembly=ControlsAndResources"
             DataContext="{Binding Contact}">
    <StackPanel>
        <car:LabeledTextbox
            Label="Name: "
            Input="{Binding Name.Full}"/>
        <car:LabeledTextbox
            Label="Address: "
            Input="{Binding Address.Full}"/>
        <car:LabeledTextbox
            Label="Email: "
            Input="{Binding Email.Full}"/>
        <car:LabeledTextbox
            Label="Phone: "
            Input="{Binding Phone.Full}"/>
    </StackPanel>
</UserControl>
