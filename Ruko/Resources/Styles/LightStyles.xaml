<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Resources">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources;component/Styles/DefaultStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="Control" x:Key="LightControlStyle" BasedOn="{StaticResource BaseControlStyle}">
        <Setter Property="Background" Value="#eee"/>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource  LightControlStyle}"/>

    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseFrameworkElementStyle}">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Background" Value="#eee"/>
    </Style>

    <Style TargetType="TextBox" BasedOn="{StaticResource LightControlStyle}"/>

    <Style TargetType="CheckBox" BasedOn="{StaticResource LightControlStyle}"/>

    <Style TargetType="PasswordBox" BasedOn="{StaticResource LightControlStyle}"/>

    <Style TargetType="MenuItem" BasedOn="{StaticResource LightControlStyle}">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
    </Style>

    <Style TargetType="Label" BasedOn="{StaticResource LightControlStyle}"/>
</ResourceDictionary>