<UserControl x:Class="Ruko.WriteAddressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:car="clr-namespace:ControlsAndResources;assembly=ControlsAndResources"
             xmlns:local="clr-namespace:Ruko">
    <StackPanel>

        <car:LabeledTextbox
            Label="Street: "
            Input="{Binding Street}"/>

        <car:LabeledTextbox
            Label="City: "
            Input="{Binding City}"/>

        <car:LabeledTextbox
            Label="State: "
            Input="{Binding State}"/>

        <car:LabeledTextbox
            Label="Zipcode: "
            Input="{Binding ZipCode}"/>

    </StackPanel>
</UserControl>