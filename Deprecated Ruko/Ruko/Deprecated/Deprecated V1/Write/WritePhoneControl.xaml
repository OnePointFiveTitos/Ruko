<UserControl x:Class="Ruko.WritePhoneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:car="clr-namespace:ControlsAndResources;assembly=ControlsAndResources"
             xmlns:local="clr-namespace:Ruko">
    <StackPanel>

        <car:LabeledTextbox
            Label="Areacode: "
            Input="{Binding AreaCode}"/>

        <car:LabeledTextbox
            Label="Prefix: "
            Input="{Binding Prefix}"/>

        <car:LabeledTextbox
            Label="Line #: "
            Input="{Binding LineNumber}"/>

        <car:LabeledTextbox
            Label="Ext: "
            Input="{Binding Extension, FallbackValue='n/a', TargetNullValue='n/a'}"/>

    </StackPanel>
</UserControl>