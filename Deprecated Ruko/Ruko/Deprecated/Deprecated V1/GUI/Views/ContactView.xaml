<UserControl x:Class="Ruko.ContactView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:car="clr-namespace:ControlsAndResources;assembly=ControlsAndResources"
             xmlns:local="clr-namespace:Ruko">
    <Grid>
        <local:ReadContactControl
            Visibility="{Binding Parent.IsModifying, Converter={StaticResource FalseToVisibility}}"/>
        <local:WriteContactControl
            Visibility="{Binding Parent.IsModifying, Converter={StaticResource TrueToVisibility}, FallbackValue=Collapsed, TargetNullValue=Collapsed}"/>
    </Grid>
</UserControl>
