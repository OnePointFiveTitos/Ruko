<UserControl x:Class="Ruko.RukoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:car="clr-namespace:ControlsAndResources;assembly=ControlsAndResources"
             xmlns:local="clr-namespace:Ruko">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height=".3*"/>
            <RowDefinition Height="auto"/>
            <!--splitter-->
            <RowDefinition Height=".7*"/>
        </Grid.RowDefinitions>

        <local:RukoViewMenu/>

        <local:GeneralView
            x:Name="GeneralView"
            Grid.Row="1"/>

        <GridSplitter
            HorizontalAlignment="Stretch"
            Background="DarkGray"
            Height="5"
            Grid.Row="2"/>

        <local:AddCustomerControl 
            DataContext="{Binding AddCustomerViewModel}"
            Visibility="{Binding Parent.IsAddingCustomer, Converter={StaticResource TrueToVisibility}}"
            Grid.Row="3"/>

        <local:CustomerTabs
            Visibility="{Binding IsAddingCustomer, Converter={StaticResource FalseToVisibility}}"
            x:Name="CustomerTabs"
            Grid.Row="3"/>

    </Grid>
</UserControl>