<UserControl x:Class="Ruko.CustomerTabs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Ruko">
    <Grid>

        <!--<Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>-->
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <ListView
            SelectedItem="{Binding SelectedOpenedCustomer}"
            ItemsSource="{Binding OpenedCustomers}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        FontWeight="{Binding IsModifying, Converter={StaticResource ModifyingIndicationFontWeight}}"
                        Text="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <local:CustomerView
            x:Name="CustomerView"
            DataContext="{Binding SelectedOpenedCustomer}"
            Grid.Column="1"/>
        
    </Grid>
</UserControl>