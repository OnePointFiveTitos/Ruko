<UserControl x:Class="Ruko.CustomersGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Ruko">
    <DataGrid
        IsReadOnly="True"
        AutoGenerateColumns="False"
        VirtualizingPanel.ScrollUnit="Item"
        VirtualizingPanel.VirtualizationMode="Recycling"
        VirtualizingPanel.IsVirtualizing="True"
        SelectedItem="{Binding SelectedCustomer}"
        ItemsSource="{Binding Customers}">
        <DataGrid.Resources>
            <Style TargetType="DataGridRow">
                <EventSetter Event="MouseDoubleClick" Handler="DataGridRow_MouseDoubleClick"/>
            </Style>
        </DataGrid.Resources>
        <DataGrid.Columns>

            <DataGridTextColumn
                SortMemberPath="Name.First"
                Binding="{Binding Name.Full}"
                Header="Name"/>

            <DataGridTextColumn
                SortMemberPath="Address.Street"
                Binding="{Binding Address.Full}"
                Header="Address"/>

            <DataGridTextColumn
                SortMemberPath="Phone.AreaCode"
                Binding="{Binding Phone.Full}"
                Header="Phone"/>

            <DataGridTextColumn
                SortMemberPath="Email.Handle"
                Binding="{Binding Email.Full}"
                Header="Email"/>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>