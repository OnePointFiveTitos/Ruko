<UserControl x:Class="Ruko.AccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ruko"
             xmlns:car="clr-namespace:ControlsAndResources;assembly=ControlsAndResources"
             DataContext="{Binding Account}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel>
            <car:LabeledTextblock
                Input="{Binding ID}"
                Label="Account #: "/>
            <car:LabeledTextblock
                Input="{Binding Status}"
                Label="Status: "/>
            <car:LabeledTextblock
                Input="{Binding Standing}"
                Label="Standing: "/>
            <car:LabeledTextblock
                Input="{Binding Lead}"
                Label="Lead: "/>
        </StackPanel>
    </Grid>
</UserControl>
